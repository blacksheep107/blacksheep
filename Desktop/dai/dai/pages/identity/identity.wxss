}

.icon{
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
  margin-top: 15rpx;
  margin-bottom:150rpx; 
  display: flex;
  justify-content: center;
  box-shadow: 1px 1px 1px #DCDCDC;
}

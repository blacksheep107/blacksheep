.img {
  width: 85%;
  height: 330rpx;
  border: 2px solid #cdcdcd;
  background-color: #f2f2f2;
  margin: 0 auto;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  /*margin-bottom: 30rpx;*/
}

.img image{
  width: 100%;
  height: 330rpx;
}
.img text {
  color: #3c3c3c;
  font-size: 24rpx;
  font-weight: bold;
}

.submit {
  width: 100%;
  border-radius: 0%;
  border: 2px solid gainsboro;
  color: black;
}

.buttonView {
  position: fixed;
  bottom: 0px;
